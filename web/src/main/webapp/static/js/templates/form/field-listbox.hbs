{{#if label}}
<label>{{label}}</label>
{{/if}}
<select name="{{name}}"
    {{#if required}}required{{/if}}>
    {{#if options}}
        {{#each options}}
            <option value="{{value}}"
                {{#if selected}}selected{{/if}}
            >
            {{#if label}}
                {{label}}
            {{else}}
                {{value}}
            {{/if}}
            </option>
        {{/each}}
    {{/if}}
</select>
{{#if messages}}
{{#each messages}}
<div class="alert fade in alert-{{type}}">
    <button type="button" class="close" data-dismiss="alert">Ã—</button>
    {{text}}
</div>
{{/each}}
{{/if}}