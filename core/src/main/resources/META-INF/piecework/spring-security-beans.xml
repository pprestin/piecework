<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:security="http://www.springframework.org/schema/security"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
      http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
   http://www.springframework.org/schema/security
   http://www.springframework.org/schema/security/spring-security-3.1.xsd">

    <security:global-method-security jsr250-annotations="enabled" access-decision-manager-ref="pieceworkAccessDecisionManager"/>

    <security:http pattern="/api/**" use-expressions="true" >
        <security:intercept-url pattern="/**" access="authenticated"/>
        <security:x509/>
    </security:http>

    <security:http pattern="/public/**" auto-config="true" use-expressions="true">
        <security:intercept-url pattern="/**" access="permitAll"/>
        <security:anonymous enabled="false"/>
        <security:custom-filter ref="pieceworkAnonymousAuthFilter" position="ANONYMOUS_FILTER"/>
    </security:http>

    <security:http pattern="/ui/**" auto-config="true" use-expressions="true" access-denied-page="/static/login_error.html">
        <security:intercept-url pattern="/instance/*" access="permitAll" method="OPTIONS"/>
        <security:intercept-url pattern="/**" access="authenticated"/>

        <security:form-login
                login-page="/static/login.html"
                authentication-failure-url="/static/login_error.html"
                default-target-url="/"/>

        <security:custom-filter ref="pieceworkPreAuthFilter" position="PRE_AUTH_FILTER"/>
    </security:http>

